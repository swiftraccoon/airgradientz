{
  "name": "airgradientz",
  "version": "1.0.0",
  "private": true,
  "description": "Local dashboard for AirGradient air quality monitors",
  "main": "server.js",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
